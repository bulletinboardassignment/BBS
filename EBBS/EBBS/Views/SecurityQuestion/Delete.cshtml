@model EBBS.Data.SecurityQuestion

@{
    ViewBag.Title = "Delete";
}


<br />
<br />
<div>
    <h2><span class="mySpan">  Delete Security Question</span></h2>
</div>
<hr />

<body id="grad">

<div class="alert-danger"></div>
<h3  align="left" style="color: red">Are you sure you want to delete this?</h3>
<div>
   
    @using (Html.BeginForm("Delete","SecurityQuestion", FormMethod.Post)) {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <hr />
        
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           
        

            <div class="form-group">
                @Html.LabelFor(model => model.qId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.qId, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.question, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.question, new { htmlAttributes = new { @class = "form-control" , @disabled = "disabled"} })
                    @Html.ValidationMessageFor(model => model.question, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" align="left">
                <div >
                    <button class="btn btn-danger" type="submit"> <i class="glyphicon glyphicon-trash"></i> Delete </button>
                    <button class="btn btn-primary" onclick="location.href = '@Url.Action("Index","SecurityQuestion")'" type="button"><i class="glyphicon glyphicon-minus"></i> Cancel</button>
                </div>
            </div>
        </div>
      
    }

</div>
</body>