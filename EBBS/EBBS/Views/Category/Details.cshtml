@model EBBS.Data.Category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<hr/>

<div>
    <h4 style="color:green">@Html.Raw(TempData["editMessage"])</h4>
    <dl class="dl-horizontal">
        <dt>
        <dt>Category Name :</dt>
        <dd>@Html.DisplayFor(model => model.categoryName)</dd>
        <dt>Description : </dt>
        <dd>@Html.DisplayFor(model => model.description)</dd>
        <dt> Created By: </dt>
        <dd> @Model.User.firstName @Model.User.lastName</dd>
        <dt> Created On : </dt>
        <dd>@Html.DisplayFor(model => model.createTime)</dd>
    </dl>
</div>
<p>
    <div>
        <button class="btn btn-success" onclick="location.href = '@Url.Action("Edit", new { id=Model.cId })'" type="button"><i class="glyphicon glyphicon-edit"></i> Edit </button>
        <button class="btn btn-info" onclick="location.href = '@Url.Action("Index","Category")'" type="button"><i class="glyphicon glyphicon-plus-sign"></i> Cancel</button>
    </div>
    
</p>
