@model EBBS.Data.Category

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
            <dt>Category Name :</dt>
            <dd>@Html.DisplayFor(model => model.categoryName)</dd>
            <dt>Description : </dt>
            <dd>@Html.DisplayFor(model => model.description)</dd>
            <dt> Created By: </dt>
            <dd> @Model.User.firstName @Model.User.lastName</dd>
            <dt> Created On : </dt>
            <dd>@Html.DisplayFor(model => model.createTime)</dd>
   </dl>

    @using (Html.BeginForm("delete", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div >


                <button class="btn btn-success" type="submit"> <i class="glyphicon glyphicon-plus-sign"></i> Submit </button>
                <button class="btn btn-info" onclick="location.href = '@Url.Action("Index","Category")'" type="button"><i class="glyphicon glyphicon-plus-sign"></i> Cancel</button>


            </div>
        </div>
    }
</div>
