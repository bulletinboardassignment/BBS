@model EBBS.Data.Comment

<br />
<br />
<div>
    <h2><span class="mySpan">  Delete My Comment</span></h2>
</div>
<hr />
<body id="grad">
    <div class="alert-danger"></div>
    <h3 align="left" style="color: red">Are you sure you want to delete this?</h3>
    <hr />
    <div class="form-horizontal">
        <div class="commentSection">
            <div class="form-group;post">
                <div style="text-align:center">
                    <header class="modal-title">
                        <div class="form-group" style="align-content:stretch">
                            <h3><i class="glyphicon glyphicon-pencil"></i> @Html.DisplayFor(model => model.Post.postTitle)</h3>
                        </div>
                    </header>
                    <p style="text-align:center"> @Html.DisplayFor(model => model.commentText)</p>
                    <h6 class="fa fa-user" aria-hidden="true"> Commented by :@Html.DisplayFor(model => model.User.firstName) @Html.DisplayFor(model => model.User.lastName)</h6>
                    | <h6 style="text-align:left" class="fa fa-calendar" aria-hidden="true"> Commented on @Html.DisplayFor(model => model.createTime)</h6>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group" align="center">
                        <div>
                            <button class="btn btn-danger" type="submit" id="delete" data="@Model.commentId"> <i class="glyphicon glyphicon-trash"></i> Delete </button>
                            <button class="btn btn-primary" onclick="location.href = '@Url.Action("MyPosts","Post")'" type="button"><i class="glyphicon glyphicon-minus"></i> Cancel</button>
                        </div>
                    </div>
                }
            </div>
            </div>
        </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}