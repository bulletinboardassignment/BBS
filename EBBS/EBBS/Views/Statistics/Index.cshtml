    <canvas id="myChart" width="50" height="50"></canvas>
    <script type="text/javascript">
    var ctx = document.getElementById('myChart').getContext('2d');

    var labels = [];

    @foreach (var month in ViewBag.labels) {
        <text>
            var me = '@(month)';
            labels.push(me);


        </text>
     }
    var data = [];
     @foreach (var npost in ViewBag.nOfPosts) {
         <text>
    var you = '@(npost)';
    data.push(you);
         </text>
     }


        var myChart = new Chart(ctx, {
        type: 'line',
            data: {
         labels: labels,
            datasets: [{
                label: ' # of Posts Per Month',
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192   , 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 15
            }]
        },
        options: {
         scales: {
             yAxes: [{
                 ticks: {
                     beginAtZero: true
                     }
                 }]
            }
         }
     });
    </script>

</body>