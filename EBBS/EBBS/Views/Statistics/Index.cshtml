<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

<br />
<div>
    <h2><span class="mySpan"> EBBS Post Statistics</span></h2>
</div>
<hr />
<body id="grad">
     


    <div style="width:1000px; height:1000px;">
        <canvas id="myChart"></canvas>
    </div>
    <script type="text/javascript">
    var ctx = document.getElementById('myChart').getContext('2d');

    var labels = [];

    @foreach (var month in ViewBag.labels) {
        <text>
            var me = '@(month)';
            labels.push(me);


        </text>
     }
    var data = [];
     @foreach (var npost in ViewBag.nOfPosts) {
         <text>
    var you = '@(npost)';
    data.push(you);
         </text>
     }


        var myChart = new Chart(ctx, {
        type: 'bar',
            data: {
         labels: labels,
            datasets: [{
                label: ' # of Posts Per Month',
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192   , 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 0, 0, 0.3)',
                    'rgba(0, 255, 0, 0.3)',
                     'rgba(0, 0, 255, 0.3)',
                     'rgba(192, 192, 192, 0.3)',
                     'rgba(255, 255, 0, 0.3)',
                      'rgba(255, 0, 255, 0.3)'
                    
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    
                    'rgba(255, 0, 0, 0.3)',
                    'rgba(0, 255, 0, 0.3)',
                    'rgba(0, 0, 255, 0.3)',
                    'rgba(192, 192, 192, 0.3)',
                    'rgba(255, 255, 0, 0.3)',
                    'rgba(255, 0, 255, 0.3)'
                ],
                borderWidth: 10
            }]
        },
        options: {
         scales: {
             yAxes: [{
                 ticks: {
                     beginAtZero: true
                     }
                 }]
            }
         }
     });
    </script>

</body>