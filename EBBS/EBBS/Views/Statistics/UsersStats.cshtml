<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

<br />
<div>
    <h2><span class="mySpan"> EBBS User Statistics</span></h2>
</div>
<hr />
<body id="grad">
    <canvas id="myChart"></canvas>
    <script type="text/javascript">
    var ctx = document.getElementById('myChart').getContext('2d');
    var labels = ['All Users', 'Users in Last Month'];

    var data = ['@(ViewBag.allUsers)', '@(ViewBag.usersThisMonth)'];

        var myChart = new Chart(ctx, {
        type: 'pie',
            data: {
         labels: labels,
            datasets: [{
                label: '# of posts per month',
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192   , 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ]
            }]
        }
     });
    </script>
</body>