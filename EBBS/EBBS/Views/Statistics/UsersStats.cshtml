<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

<br />
<div>
    <h2><span class="mySpan"> EBBS User Statistics</span></h2>
</div>
<hr />
<body id="grad">
    <canvas id="myChart"></canvas>
    <script type="text/javascript">
    var ctx = document.getElementById('myChart').getContext('2d');
    var labels = ['All Users', 'Users in Last Month'];

    var data = ['@(ViewBag.allUsers)', '@(ViewBag.usersThisMonth)'];

        var myChart = new Chart(ctx, {
        type: 'pie',
            data: {
         labels: labels,
            datasets: [{
                label: '# of posts per month',
                data: data,
                backgroundColor: [
                    'rgba(255, 0, 0, 0.3)',
                    'rgba(0, 255, 0, 0.3)',
                    'rgba(0, 0, 255, 0.3)',
                    'rgba(192, 192, 192, 0.3)',
                    'rgba(255, 255, 0, 0.3)',
                    'rgba(255, 0, 255, 0.3)'
                ],
                borderColor: [
                    'rgba(255, 0, 0, 0.3)',
                    'rgba(0, 255, 0, 0.3)',
                    'rgba(0, 0, 255, 0.3)',
                    'rgba(192, 192, 192, 0.3)',
                    'rgba(255, 255, 0, 0.3)',
                    'rgba(255, 0, 255, 0.3)'
                ]
            }]
        }
     });
    </script>
</body>